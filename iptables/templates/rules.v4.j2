# This file is managed by ansible, don't make changes here - they will be overwritten.
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-N DNS
-A INPUT -p udp -m udp --dport 53 -j DNS
-A INPUT -p tcp -m tcp --dport 53 -j DNS
{% for host in groups['services'] %}
-A DNS -d {{hostvars[host].ansible_ssh_host}}/32 -j RETURN
{% endfor %}
{% for entry in v4dnsips %}
-A DNS -d {{entry}}/32 -j RETURN
{% endfor %}
-A DNS -j MARK --set-xmark 0x1/0xffffffff

COMMIT
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
-A POSTROUTING -o tun-+ -j SNAT --to-source {{server_ipv4_nat | ipaddr('address')}}
COMMIT
*mangle
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
-A OUTPUT{% for master in bind.ffms_zone_masters %} ! -d {{master}}{% endfor %} -o eth0 -p udp -m udp --dport 53 -j MARK --set-xmark 0x1/0xffffffff
-A OUTPUT{% for master in bind.ffms_zone_masters %} ! -d {{master}}{% endfor %} -o eth0 -p tcp -m tcp --dport 53 -j MARK --set-xmark 0x1/0xffffffff
-A POSTROUTING -o tun-+ -p tcp -m tcp --tcp-flags SYN,RST SYN -m tcpmss ! --mss 0:1240 -j TCPMSS --set-mss 1240
COMMIT
